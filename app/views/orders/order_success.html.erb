<div class="background-parent-container-order">
  <div class="child-container-page-order-sucess">
    <h1 class="header-order-success"> Number of Orders: <%= @order.id %></h1>
    <hr class="break-line">
    <div class="tick-order"></div>
    <div class="after-tick-order-text">
      <h1>Thank you for booking with VenueHunt</h1>
      <h3>Order Reference: <%= @order.id %> </h3>
      <h3>Ordered on: <%= @order.created_at %> </h3>
    </div>
    <hr class="break-line">
    <% @cart = Cart.find(@order.cart_id) %>
      <h1>Booking details</h1>
    <% @cart.bookings.each do |booking| %>
      <p><%= booking.date_from %></p>
      <p><%= booking.date_to %></p>
      <p><%= booking.event_name %></p>
      <p><%= booking.number_of_participants %></p>
      <p><%= booking.food %></p>
      <p><%= booking.beverage %></p>
      <p><%= booking.other_services_offered %></p>
      <p>total <%= booking.total %></p>
    <% end %>

    <%= link_to "View my orders", orders_path %>
  </div>
</div>
