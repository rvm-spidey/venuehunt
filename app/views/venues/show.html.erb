  <div class="venue-img-container mt-5">
    <div class="row gy-5 d-flex">
      <div class="col-8 col-md-4 col-lg-6">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner h-75">
