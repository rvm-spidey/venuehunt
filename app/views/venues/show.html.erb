    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
        </div>
      </div>
    </div>




   <div class="col-4 col-md-6 col-lg-6">
      <h2><%= @venue.location.name %></h2>
      <p><%= @venue.description %></p>
      <div class="container d-flex">
        <div class="desc-container">
          <p><i class="fa-solid fa-map-location me-2"></i><%= @venue.address  %></p>
          <p><i class="fa-solid fa-layer-group me-2"></i><%= @venue.space_size  %> sqm</p>
          <p><i class="fa-solid fa-money-bill-1-wave me-2"></i>Rs <%= @venue.price  %></p>
          <p><i class="fa-solid fa-envelope me-2"></i><%= User.find(@venue.user_id).email  %></p>
        </div>
        <div class="desc-container ms-4">
          <p><i class="fa-solid fa-clock me-2"></i>Opening: <%= @venue.opening_time.strftime("%H:%M") unless @venue.opening_time.nil?  %></p>
          <p><i class="fa-regular fa-clock me-2"></i>Closing: <%= @venue.closing_time.strftime("%H:%M") unless @venue.opening_time.nil?  %></p>
          <p><i class="fa-solid fa-utensils me-2"></i>Food and bev <%= @venue.food_beverages_offered %></p>
          <p><i class="fa-solid fa-circle-info me-2"></i>Other Services <%= @venue.other_services_offered %></p>
        </div>
      </div>

