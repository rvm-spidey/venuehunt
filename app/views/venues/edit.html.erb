<div class="p-5 mx-auto" style="width: 50vw; text-align: center" >
  <h2>Edit Venue</h2>
</div>

<div class="container d-flex justify-content-center align-items-center" style="width: 100vw; height: 40%;">
    <%= simple_form_for @venue do |f| %>

      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :space_size, as: :numeric %>
      <%= f.input :availability %>
      <%= f.input :price, as: :numeric %>

      <%= f.submit 'Confirm creation', style: 'width: 100%; background-color:yellow'%>
    <% end %>
  </div>
</div>
