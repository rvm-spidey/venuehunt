<div data-display-suggestions-target="list">
  <div class="loader-container">
    <div id="loader" class="loader" style="display: none;"></div>
  </div>
  <div class="container sugg-content-container">
    <p class="m-2 content-overlay"><%= @content %></p>
  </div>

  <% if !@content.empty? %>
    <h3>Tags</h3>
    <div class="tag-ai-suggestions">
      <% @tags.each do |tag| %>
        <p>
          <%= link_to "#{tag}", venues_path(venuetype_id: [Venuetype.find_by(name: tag).id]), class: "tag-api" %>
        </p>
      <% end %>
    </div>
    <!--
    <ul>
      <% @tags.each do |tag| %>
        <li>
          <%= link_to "#{tag}", venues_path(venuetype_id: [Venuetype.find_by(name: tag).id]), class: "tag-api" %>
        </li>
      <% end %>
    </ul>
    -->
  <% end %>
</div>
