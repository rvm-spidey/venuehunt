  <div data-display-suggestions-target = "items">
    <% if @content.present? %>
      <div>
        <p>Our suggestions:</p>
        <p><%= @content %></p>
      </div>
    <% end %>

    <h2>Tags</h2>
    <ul>
    <% @tags.each_with_index do |index, tag| %>
      <li><%= "#{index} #{tag}" %></li>
    <% end %>
  </ul>

