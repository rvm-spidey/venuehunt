<div data-controller="display-suggestions">


  <%= form_with url: "/", method: :get, html: {class: "mb-4", data: {display_suggestions_target: "form"}} do |f| %>
    <%= f.label :query, "Type a movie title" %>
    <%= f.text_field :query,
              class: "form-control",
              value: params[:query],
              data: {display_suggestions_target: "input", action: "submit->display-suggestions#send"}
    %>
  <% end %>

