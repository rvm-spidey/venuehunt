<div class="container form-container">

  <div data-controller="display-suggestions">

    <%= form_with url: pages_path , method: :get, html: {class: "mb-3", data: {display_suggestions_target: "form"}} do |f| %>
      <h1><%= f.label :query, "Please describe for what event do you need a venue" %></h1>
      <%= f.text_field :query,
                class: "form-control sugg-form-control",
                value: params[:query],
                placeholder: "Describe your event",
                data: {display_suggestions_target: "input"}
      %>
      <div class="row col-3 d-flex justify-content-center mx-auto ">
      <%= f.submit "Get intelligent suggestions", data: { action: "click->display-suggestions#send"}, class: "submit-button" %>
      </div>
    <% end %>
    <%= render "suggestions" %>

  </div>
