        <%= f.text_field :query,
                  class: "form-control me-2",
                  value: params[:query],
                  placeholder: "Describe your event",
                  data: {display_suggestions_target: "input"}

        %>
        <%= f.submit "Get intelligent suggestions", data: { action: "click->display-suggestions#send"}, class: "btn btn-primary" %>
      <% end %>
      </div>

      <%= render "suggestions"%>
    </div>
  </div>

